{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["src/@types/*"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [".eslintrc.*", "vite.config.ts", "src/**/*"],
  "exclude": ["dist", "node_modules", "cypress"]
}
